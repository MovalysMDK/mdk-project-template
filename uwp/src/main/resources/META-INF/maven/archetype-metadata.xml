<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="web-archetype">
	<requiredProperties>
	    <requiredProperty key="applicationName">
	    	<defaultValue>${artifactId}</defaultValue>
	    </requiredProperty>
	    <requiredProperty key="xmiFile">
	    	<defaultValue>${artifactId}/docs/modelisation/${artifactId}.xml</defaultValue>
	    </requiredProperty>
	    <requiredProperty key="adjavaDebug">
	    	<defaultValue>false</defaultValue>
	    </requiredProperty>
	</requiredProperties>

	<fileSets>
		
		<!-- Project filtered resources -->
		<fileSet filtered="true" encoding="UTF-8">
			<directory>__applicationName__</directory>
			<includes>
				<include>**/*.sln</include>
				<include>**/*.xml</include>
				<include>**/*.csproj</include>
				<include>**/*.shproj</include>
				<include>**/*.projitems</include>
				<include>**/*.txt</include>
				<include>**/*.cs</include>
				<include>**/*.xaml</include>
				<include>**/*.appxmanifest</include>
				<include>**/*.resx</include>
				<include>**/*.properties</include>
				<include>**/*.config</include>
				<include>**/*.sql</include>
				<include>**/*.resw</include>
			</includes>
		</fileSet>
		
		<!-- Project non-filtered resources -->
		<fileSet filtered="false">
			<directory>__applicationName__</directory>
			<includes>
				<include>**/*.mdzip</include>
				<include>**/*.xls</include>
				<include>**/*.png</include>
				<include>**/*.jpg</include>
				<include>**/*.pfx</include>
			</includes>
		</fileSet>
		
		<fileSet filtered="false" encoding="UTF-8">
	        <directory>conf</directory>
			<includes>
				<include>astyle.cfg</include>
			</includes>
	    </fileSet>

	    <fileSet filtered="false" encoding="UTF-8">
			<directory>version</directory>
			<includes>
				<include>**/*.xml</include>
			</includes>
		</fileSet>


	</fileSets>

</archetype-descriptor>