<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="web-archetype">
	<requiredProperties>
	    <requiredProperty key="applicationName">
	    	<defaultValue>${artifactId}</defaultValue>
	    </requiredProperty>
	    <requiredProperty key="xmiFile">
	    	<defaultValue>docs/modelisation/${artifactId}.xml</defaultValue>
	    </requiredProperty>
	    <requiredProperty key="adjavaDebug">
	    	<defaultValue>false</defaultValue>
	    </requiredProperty>
	</requiredProperties>

	<fileSets>
	   	<!-- project files -->
		<fileSet filtered="true" encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>

		<!-- .vscode -->
		<fileSet filtered="false" encoding="UTF-8">
			<directory>.vscode</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		
		<!-- app -->
		<fileSet filtered="false" encoding="UTF-8">
			<directory>app</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		
		<!-- bundles -->
		<fileSet filtered="false" encoding="UTF-8">
			<directory>bundles</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		
		<!-- docs -->	
		<fileSet filtered="false" encoding="UTF-8">
			<directory>docs</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
				
		<!-- hooks -->	
		<fileSet filtered="false" encoding="UTF-8">
			<directory>hooks</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		
		<!-- jspm_packages -->
		<fileSet filtered="false" encoding="UTF-8">
			<directory>jspm_packages</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		
		
		<!-- platforms -->
		<fileSet filtered="false" encoding="UTF-8">
			<directory>platforms</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>

		<!-- plugins -->
		<fileSet filtered="plugins" encoding="UTF-8">
			<directory>plugins</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>

		<!-- resources -->
		<fileSet filtered="false" encoding="UTF-8">
			<directory>resources</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>

		<!-- tools (Automatically include MOV-MM-XXXX.xls) -->
		<fileSet filtered="false" encoding="UTF-8">
			<directory>tools</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		
		<!-- typings -->
		<fileSet filtered="false" encoding="UTF-8">
			<directory>typings</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>

		<!-- version -->
		<fileSet filtered="false" encoding="UTF-8">
			<directory>version</directory>
			<includes>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		
		<!-- www -->
		<fileSet filtered="true" encoding="UTF-8">
			<directory>www</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>

</archetype-descriptor>